<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrencyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night</item>
        <item name="colorPrimaryVariant">@color/eerie_black</item>
        <item name="colorOnPrimary">@color/sea_salt</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/backgroundColor</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/anti_flash_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="backgroundColor">@color/sea_salt</item>
    </style>

    <style name="AppNameTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="RoundedTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_selector</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="tabSelectedTextColor">#000000</item>
        <item name="tabTextColor">#000000</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabRippleColor">@color/transparent</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="ListRowText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/night</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="ListRowTopText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/night</item>
        <item name="fontFamily">@font/inter_semi_bold</item>

    </style>

    <style name="ListRowSubText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#495057</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="LabelText">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/night</item>
    </style>

    <style name="IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">30dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <style name="IconButton.Outlined" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="iconSize">20dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>

    <style name="InputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="android:minHeight">56dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_text_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_text_corner_radius</item>
    </style>

    <style name="InputTextLayout.LabelText">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AuthButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="MyTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/night</item>
    </style>
</resources>